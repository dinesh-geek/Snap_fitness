<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee2d7"
    android:orientation="vertical"
    tools:context=".dietplan">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="BreakFast"
                android:fontFamily="@font/berkshire_swash"
                android:padding="16dp"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:background="@drawable/bg_gradient_4"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:elevation="10dp"
                app:cardCornerRadius="10dp"
                android:layout_height="130dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp">
                 <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Egg and Avocado Toast"
                        android:fontFamily="@font/acme"
                        android:textSize="15sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/acme"
                        android:text="2 eggs \n1 slice of Ezekiel toast \n1/2 avocado"
                        />

                </LinearLayout>
                <TextView
                    android:layout_width="83dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_bg1"
                    android:text="200CAL"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="20dp"
                    android:textSize="17sp"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:layout_marginLeft="95dp"
                    android:textColor="#ffffff"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Lunch"
                android:fontFamily="@font/berkshire_swash"
                android:padding="16dp"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:background="@drawable/bg_gradient_4"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:elevation="10dp"
                app:cardCornerRadius="10dp"
                android:layout_marginBottom="15dp"
                android:layout_height="170dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/acme"
                            android:text="Salad with Grilled Chicken"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/acme"
                            android:text="2 cups (40 grams) of spinach \n4 ounces (112 grams) of grilled chicken \n1/2 cup (120 grams) of chickpeas \n1/2 cup (25 grams) of shredded carrots \n1 ounce (28 grams) of goat cheese \nBalsamic vinaigrette" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="83dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/spinner_bg1"
                        android:padding="10dp"
                        android:text="119CAL"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="20dp"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="17sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Dinner"
                android:fontFamily="@font/berkshire_swash"
                android:padding="16dp"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:background="@drawable/bg_gradient_4"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:elevation="10dp"
                app:cardCornerRadius="10dp"
                android:layout_marginBottom="15dp"
                android:layout_height="150dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/acme"
                        android:text="Cod with Quinoa and Broccoli"
                        android:textSize="15sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:fontFamily="@font/acme"
                        android:text="5 ounces (140 grams) of baked cod \n1 tablespoon (15 ml) of olive oil \n3/4 cup (138 grams) of quinoa \n2 cups (176 grams) of roasted broccoli"/>

                </LinearLayout>
                <TextView
                    android:layout_width="83dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_bg1"
                    android:textAlignment="center"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="20dp"
                    android:text="135CAL"
                    android:textSize="17sp"
                    android:padding="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#ffffff"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="7 Days Diet Plan"
                android:fontFamily="@font/berkshire_swash"
                android:padding="16dp"
                android:layout_marginBottom="15dp"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:background="@drawable/bg_gradient_4"/>

            <com.denzcoskun.imageslider.ImageSlider
                android:layout_width="match_parent"
                android:id="@+id/slider"
                app:placeholder="@drawable/bg_gradient_4"
                app:error_image="@drawable/bg_gradient_4"
                android:background="@drawable/black_border"
                android:elevation="10dp"
                android:layout_height="600dp"
                android:layout_marginBottom="50dp"
                app:delay="0"
                app:period="2000"
                app:corner_radius="10"
                app:auto_cycle="true">

            </com.denzcoskun.imageslider.ImageSlider>
        </LinearLayout>

    </ScrollView>

</LinearLayout>