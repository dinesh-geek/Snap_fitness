<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#eee2d7">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/llexercise"
            android:background="@drawable/personalisedexercise"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PERSONALIZED"
                android:textColor="#fff"
                android:fontFamily="@font/muli_bold"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:textSize="30sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EXERCISE"
                android:fontFamily="@font/muli_bold"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/dietpic"
            android:id="@+id/diet_plan_everyday"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PERSONALIZED"
                android:fontFamily="@font/muli_bold"
                android:textColor="#ffffff"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:textSize="30sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="DIET"
                android:fontFamily="@font/muli_bold"
                android:textColor="#ffffff"
                android:textSize="30sp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/to_check_bmi"
            android:background="@drawable/bmipic"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BODY MASS INDEX "
                android:fontFamily="@font/muli_bold"
                android:textColor="#ffffff"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:textSize="30sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CALCULATOR"
                android:fontFamily="@font/muli_bold"
                android:textSize="30sp"
                android:textColor="#ffffff"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/to_check_trainee"
            android:background="@drawable/gymtrainee"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GYM "
                android:fontFamily="@font/muli_bold"
                android:textColor="#ffffff"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:textSize="30sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TRAINERS"
                android:textSize="30sp"
                android:fontFamily="@font/muli_bold"
                android:textColor="#ffffff"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>
</ScrollView>