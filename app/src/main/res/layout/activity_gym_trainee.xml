<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_wave"
    android:orientation="vertical"
    tools:context=".GymTraineeActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:fontFamily="@font/almendra_bold_italic"
        android:textSize="30sp"
        android:paddingTop="20dp"
        android:paddingBottom="30dp"
        android:text="TRAINERS"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <!-- 1st row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center">
                <androidx.cardview.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="240dp"
                    android:elevation="10dp"
                    app:cardCornerRadius="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:src="@drawable/praveen_tokas"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Praveen Tokas"
                        android:fontFamily="@font/berkshire_swash"
                        android:textSize="18sp"
                        android:padding="5dp"/>
                       <ImageView
                           android:id="@+id/iv_num_one"
                           android:layout_width="40dp"
                           android:layout_height="40dp"
                           android:src="@drawable/ic_call"
                           android:background="@drawable/stepper_background"
                           android:layout_gravity="center"
                           android:padding="5dp"
                           android:layout_marginBottom="10dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center">
                <androidx.cardview.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="240dp"
                    android:elevation="10dp"
                    app:cardCornerRadius="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView

                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:src="@drawable/payal_gidwani"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="Payal Gidwani"
                            android:fontFamily="@font/berkshire_swash"
                            android:textSize="18sp"
                            android:padding="5dp"/>
                        <ImageView
                            android:id="@+id/iv_num_two"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_call"
                            android:background="@drawable/stepper_background"
                            android:layout_gravity="center"
                            android:padding="5dp"
                            android:layout_marginBottom="10dp"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <!-- 2nd row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center">
                <androidx.cardview.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="240dp"
                    android:elevation="10dp"
                    app:cardCornerRadius="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:src="@drawable/satyajit_chaurasia"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="Satyajit Chaurasia"
                            android:fontFamily="@font/berkshire_swash"
                            android:textSize="18sp"
                            android:padding="5dp"/>
                        <ImageView
                            android:id="@+id/iv_num_three"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_call"
                            android:background="@drawable/stepper_background"
                            android:layout_gravity="center"
                            android:padding="5dp"
                            android:layout_marginBottom="10dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center">
                <androidx.cardview.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="240dp"
                    android:elevation="10dp"
                    app:cardCornerRadius="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/kris_gethin"
                            android:layout_height="160dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="Kris Gethin"
                            android:fontFamily="@font/berkshire_swash"
                            android:textSize="18sp"
                            android:padding="5dp"/>
                        <ImageView
                            android:id="@+id/iv_num_four"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_call"
                            android:background="@drawable/stepper_background"
                            android:layout_gravity="center"
                            android:padding="5dp"
                            android:layout_marginBottom="10dp"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <!-- 3rd row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center">
                <androidx.cardview.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="240dp"
                    android:elevation="10dp"
                    app:cardCornerRadius="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView

                            android:layout_width="match_parent"
                            android:src="@drawable/manish_advikar"
                            android:layout_height="160dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="Manish Advikar"
                            android:fontFamily="@font/berkshire_swash"
                            android:textSize="18sp"
                            android:padding="5dp"/>
                        <ImageView
                            android:id="@+id/iv_num_five"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_call"
                            android:background="@drawable/stepper_background"
                            android:layout_gravity="center"
                            android:padding="5dp"
                            android:layout_marginBottom="10dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center">
                <androidx.cardview.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="240dp"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView

                            android:layout_width="match_parent"
                            android:src="@drawable/mike_ryan"
                            android:layout_height="160dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="Mike Ryan"
                            android:fontFamily="@font/berkshire_swash"
                            android:textSize="18sp"
                            android:padding="5dp"/>
                        <ImageView
                            android:id="@+id/iv_num_six"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_call"
                            android:background="@drawable/stepper_background"
                            android:layout_gravity="center"
                            android:padding="5dp"
                            android:layout_marginBottom="10dp"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>


        <!-- 4th row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center">
                <androidx.cardview.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="240dp"
                    android:elevation="10dp"
                    app:cardCornerRadius="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView

                            android:layout_width="match_parent"
                            android:src="@drawable/samir_jaura"
                            android:layout_height="160dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:fontFamily="@font/berkshire_swash"
                            android:text="Samir Jaura"
                            android:textSize="18sp"
                            android:padding="5dp"/>
                        <ImageView
                            android:id="@+id/iv_num_seven"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_call"
                            android:background="@drawable/stepper_background"
                            android:layout_gravity="center"
                            android:padding="5dp"
                            android:layout_marginBottom="10dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="240dp"
                    android:elevation="10dp"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView

                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:src="@drawable/pradeep_bhatia"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Pradeep Bhatia"
                            android:fontFamily="@font/berkshire_swash"
                            android:textAlignment="center"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/iv_num_eight"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/stepper_background"
                            android:padding="5dp"
                            android:src="@drawable/ic_call" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    </ScrollView>

</LinearLayout>